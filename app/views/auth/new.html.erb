<% content_for(:title) { "Sign in - LastSignal" } %>

<div class="max-w-md mx-auto mt-16">
  <div class="text-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">LastSignal</h1>
    <p class="mt-2 text-gray-600">Secure messages for when you're gone</p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Sign in</h2>

    <%= form_with url: magic_link_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">
          Email address
        </label>
        <input 
          type="email" 
          name="email" 
          id="email" 
          required
          autofocus
          autocomplete="email"
          class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          placeholder="you@example.com"
        >
      </div>

      <div>
        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
          Send magic link
        </button>
      </div>
    <% end %>

    <p class="mt-6 text-center text-sm text-gray-500">
      No password needed. We'll email you a secure sign-in link.
    </p>
  </div>

  <div class="mt-8 p-4 bg-blue-50 border border-blue-200 rounded-lg">
    <h3 class="text-sm font-medium text-blue-800">New here?</h3>
    <p class="mt-1 text-sm text-blue-700">
      Just enter your email above. If you don't have an account yet, one will be created for you automatically.
    </p>
  </div>
</div>
