<% content_for(:title) { "Edit Settings - LastSignal" } %>

<div class="max-w-2xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Edit Check-in Settings</h1>
    <%= link_to "Cancel", account_path, class: "text-sm text-gray-600 hover:text-gray-800" %>
  </div>

  <%= form_with model: @user, url: account_path, method: :patch, class: "space-y-8" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(@user.errors.count, "error") %> prevented your settings from being saved:
        </h3>
        <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-6">Timing Settings</h2>
      
      <div class="space-y-6">
        <!-- Check-in Interval -->
        <div>
          <%= f.label :checkin_interval_hours, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center space-x-2">
            <%= f.number_field :checkin_interval_hours, 
                min: AppConfig.checkin_min_interval_hours,
                max: AppConfig.checkin_max_interval_hours,
                placeholder: AppConfig.checkin_default_interval_hours,
                class: "block w-32 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            <span class="text-sm text-gray-500">hours</span>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            How often you need to check in. 
            Leave empty for default (<%= AppConfig.checkin_default_interval_hours %> hours / <%= AppConfig.checkin_default_interval_hours / 24 %> days).
            Min: <%= AppConfig.checkin_min_interval_hours %>h, Max: <%= AppConfig.checkin_max_interval_hours %>h.
          </p>
        </div>

        <!-- Grace Period -->
        <div>
          <%= f.label :grace_period_hours, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center space-x-2">
            <%= f.number_field :grace_period_hours,
                min: AppConfig.checkin_min_grace_hours,
                max: AppConfig.checkin_max_grace_hours,
                placeholder: AppConfig.checkin_default_grace_hours,
                class: "block w-32 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            <span class="text-sm text-gray-500">hours</span>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            After missing a check-in, how long before entering cooldown. You'll receive reminder emails.
            Leave empty for default (<%= AppConfig.checkin_default_grace_hours %> hours / <%= AppConfig.checkin_default_grace_hours / 24 %> days).
          </p>
        </div>

        <!-- Cooldown Period -->
        <div>
          <%= f.label :cooldown_period_hours, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 flex items-center space-x-2">
            <%= f.number_field :cooldown_period_hours,
                min: AppConfig.checkin_min_cooldown_hours,
                max: AppConfig.checkin_max_cooldown_hours,
                placeholder: AppConfig.checkin_default_cooldown_hours,
                class: "block w-32 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            <span class="text-sm text-gray-500">hours</span>
          </div>
          <p class="mt-1 text-xs text-gray-500">
            Final warning before delivery. After this period, your messages will be sent to recipients.
            Leave empty for default (<%= AppConfig.checkin_default_cooldown_hours %> hours / <%= AppConfig.checkin_default_cooldown_hours / 24 %> days).
          </p>
        </div>
      </div>
    </div>

    <!-- Timeline Visualization -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-sm font-medium text-blue-800 mb-4">How the check-in cycle works</h3>
      <div class="flex items-center text-xs text-blue-700">
        <div class="flex-1 text-center">
          <div class="font-medium">Check-in</div>
          <div>↓</div>
        </div>
        <div class="flex-1 text-center border-t-2 border-blue-300 pt-2">
          <div>Interval</div>
          <div class="text-blue-500">(<%= @user.effective_checkin_interval_hours %>h)</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-medium">Miss</div>
          <div>↓</div>
        </div>
        <div class="flex-1 text-center border-t-2 border-yellow-400 pt-2">
          <div>Grace</div>
          <div class="text-yellow-600">(<%= @user.effective_grace_period_hours %>h)</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-medium">Warning</div>
          <div>↓</div>
        </div>
        <div class="flex-1 text-center border-t-2 border-orange-400 pt-2">
          <div>Cooldown</div>
          <div class="text-orange-600">(<%= @user.effective_cooldown_period_hours %>h)</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-medium text-red-600">Delivery</div>
        </div>
      </div>
      <p class="mt-4 text-xs text-blue-700">
        Total time from missed check-in to delivery: 
        <strong><%= @user.effective_grace_period_hours + @user.effective_cooldown_period_hours %> hours</strong>
        (<%= ((@user.effective_grace_period_hours + @user.effective_cooldown_period_hours) / 24.0).round(1) %> days)
      </p>
    </div>

    <!-- Trusted Contact -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-2">Trusted Contact (optional)</h2>
      <p class="text-sm text-gray-600 mb-6">
        A Trusted Contact can confirm you're alive but temporarily unreachable. This prevents delivery
        when you're in grace or cooldown. They cannot read your messages or access your account.
      </p>

      <div class="space-y-6">
        <%= f.fields_for :trusted_contact do |tc| %>
          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <%= tc.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= tc.text_field :name,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "Jordan Lee" %>
            </div>
            <div>
              <%= tc.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= tc.email_field :email,
                  class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "trusted@example.com" %>
            </div>
          </div>

          <div class="grid sm:grid-cols-2 gap-6">
            <div>
              <%= tc.label :ping_interval_hours, "Ping interval", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 flex items-center space-x-2">
                <%= tc.number_field :ping_interval_hours,
                    min: AppConfig.trusted_contact_min_ping_interval_hours,
                    max: AppConfig.trusted_contact_max_ping_interval_hours,
                    placeholder: AppConfig.trusted_contact_default_ping_interval_hours,
                    class: "block w-32 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                <span class="text-sm text-gray-500">hours</span>
              </div>
              <p class="mt-1 text-xs text-gray-500">
                How often a confirmation request is sent during grace or cooldown. Default: <%= AppConfig.trusted_contact_default_ping_interval_hours %>h.
              </p>
            </div>

            <div>
              <%= tc.label :pause_duration_hours, "Pause duration", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 flex items-center space-x-2">
                <%= tc.number_field :pause_duration_hours,
                    min: AppConfig.trusted_contact_min_pause_duration_hours,
                    max: AppConfig.trusted_contact_max_pause_duration_hours,
                    placeholder: AppConfig.trusted_contact_default_pause_duration_hours,
                    class: "block w-32 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
                <span class="text-sm text-gray-500">hours</span>
              </div>
              <p class="mt-1 text-xs text-gray-500">
                Each confirmation extends delivery by this duration. Default: <%= AppConfig.trusted_contact_default_pause_duration_hours %>h.
              </p>
            </div>
          </div>

          <% if tc.object&.persisted? %>
            <div class="flex items-center space-x-2">
              <%= tc.check_box :_destroy, class: "h-4 w-4 text-red-600 border-gray-300 rounded" %>
              <%= tc.label :_destroy, "Remove trusted contact", class: "text-sm text-red-600" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Trusted Contact Flow -->
    <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-6">
      <h3 class="text-sm font-medium text-indigo-800 mb-4">How Trusted Contact works</h3>
      <div class="flex items-center text-xs text-indigo-700">
        <div class="flex-1 text-center">
          <div class="font-medium">Grace/Cooldown</div>
          <div>↓</div>
        </div>
        <div class="flex-1 text-center border-t-2 border-indigo-300 pt-2">
          <div>Ping Trusted Contact</div>
          <div class="text-indigo-500">(every <%= @user.trusted_contact&.effective_ping_interval_hours || AppConfig.trusted_contact_default_ping_interval_hours %>h)</div>
        </div>
        <div class="flex-1 text-center">
          <div class="font-medium">Confirm Alive</div>
          <div>↓</div>
        </div>
        <div class="flex-1 text-center border-t-2 border-indigo-300 pt-2">
          <div>Delivery Paused</div>
          <div class="text-indigo-500">(+<%= @user.trusted_contact&.effective_pause_duration_hours || AppConfig.trusted_contact_default_pause_duration_hours %>h)</div>
        </div>
      </div>
      <p class="mt-4 text-xs text-indigo-700">
        Confirmations reset the pause timer. If no confirmation arrives, delivery proceeds as scheduled.
      </p>
    </div>

    <div class="flex justify-end space-x-4">
      <%= link_to "Cancel", account_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-800" %>
      <%= f.submit "Save Settings", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
